{
    "name": "beta/bitrix-psr7",
    "description": "PSR-7 adapter for Bitrix",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Nesterov",
            "email": "alex19pov31@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/psr7": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "BitrixPSR7\\": "src/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.20"
    },
    "scripts": {
        "cs": "phpcs --standard=PSR12 ./src/",
        "analyze": "psalm --show-info=true"
    }
}
